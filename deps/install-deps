# Build GTK-3.10.7
if [ -e $DIR/lib/libgtk.so ]; then
    echo "'gtk+-3.10.7'..........already installed"
else
    tar -Jxf gtk+-3.10.7.tar.xz
    cd gtk+-3.10.7
    ./configure --prefix=$DIR       \
                --sysconfdir=$DIR/etc    \
                --enable-broadway-backend \
                --enable-x11-backend    \
                --disable-wayland-backend
    make
    sudo make install
    cd ..
    rm -rf gtk+-3.10.7
    sudo cp -Rv ../../themes/Zukwito $DIR/share/themes/
fi



